<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
    	<property name="default_entity_mode">pojo</property>
        <property name="hibernate.connection.driver_class">org.gjt.mm.mysql.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/ambit_qmrf</property>
        <property name="hibernate.default_schema">ambit_qmrf</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQL5Dialect</property>
		<property name="hibernate.connection.username">lri_admin</property>
		<property name="hibernate.connection.password">lri</property>
		<property name="show_sql">true</property>           
    </session-factory>
</hibernate-configuration>
