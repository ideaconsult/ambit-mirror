  <modelVersion>4.0.0</modelVersion>
  <groupId>ambit</groupId>
  <artifactId>ambit2-i5rest</artifactId>
  <packaging>war</packaging>
  <name>ambit2-i5rest</name>
  <version>2.7.3-SNAPSHOT</version>
  <description>IUCLID5 interface</description>
  <inceptionYear>2008</inceptionYear>
  <dependencies>
    <dependency>
      <groupId>org.ideaconsult.iuclid5</groupId>
      <artifactId>iuclidws</artifactId>
      <version>0.0.1-SNAPSHOT</version>
    </dependency>
    <!-- 
  	<dependency>
  		<groupId>org.restlet</groupId>
